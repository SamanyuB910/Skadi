# Database Configuration
DATABASE_URL=sqlite:///./skadi.db
# For PostgreSQL: postgresql+asyncpg://user:pass@localhost:5432/skadi
# For TimescaleDB: postgresql+asyncpg://user:pass@localhost:5432/skadi

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=false

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# System Limits & Guardrails
GLOBAL_KILL_SWITCH=false
DEFAULT_MODE=advisory
WRITE_RATE_LIMIT_S=120
SLA_LATENCY_MS=250
INLET_MAX_C=28.0
RACK_KW_CAP=12.0

# IMS/MMS Configuration
IMS_SCORE_INTERVAL_S=5
IMS_TAU_FAST_PERCENTILE=95
IMS_TAU_PERSIST_PERCENTILE=98
MMS_EMA_ALPHA=0.3
MMS_PERSIST_TICKS=6

# Optimizer Configuration
FAST_LOOP_INTERVAL_S=10
SLOW_LOOP_INTERVAL_S=120
ROLLUP_INTERVAL_S=10

# Training Configuration
TRAINING_DATA_DIR=./data
ARTIFACTS_DIR=./artifacts
IMS_KMEANS_CLUSTERS=8
FORECASTER_HORIZON_MIN=5
FORECASTER_N_LAGS=12

# Report Configuration
REPORT_OUTPUT_DIR=./reports
REPORT_TIMEZONE=UTC

# Demo/Simulation
ENABLE_MOCK_SCENARIOS=true
MOCK_DATA_TICK_S=5
